@model PocketMoney.Model.External.Requests.RegisterUserRequest
@{
    ViewBag.Title = "Регистрация";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Создание новой семьи.</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Форма регистрации</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.FamilyName)
                @Html.TextBoxFor(m => m.FamilyName)
            </li>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email)
            </li>
            <li>
                @Html.LabelFor(m => m.CountryCode)
                @Html.DropDownListFor(m => m.CountryCode, (new SelectListItem[4] { 
                    new SelectListItem{ Selected = true, Text = "Россия", Value = "7" },
                    new SelectListItem{ Text = "Україна", Value = "380" },
                    new SelectListItem{ Text = "Беларусь", Value = "375" },
                    new SelectListItem{ Text = "USA", Value = "1" }
                    }).AsEnumerable())
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="Регистрация" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
